# Sky Genesis Enterprise CLI Configuration
# Copy this file to .env and update values for your environment

# API Connection
SGE_API_HOST=skygenesisenterprise.com
SGE_API_PORT=2222
SGE_USERNAME=jean.dupont

# SSH Configuration
SGE_SSH_KEY_PATH=~/.ssh/id_rsa
SGE_SSH_TIMEOUT=30

# Output Configuration
SGE_OUTPUT_FORMAT=table  # table, json, yaml
SGE_OUTPUT_COLORS=true

# Logging
SGE_LOG_LEVEL=info  # error, warn, info, debug, trace
SGE_LOG_FILE=/var/log/sge-cli.log

# Security
SGE_VERIFY_SSL=true
SGE_CA_CERT_PATH=/etc/ssl/certs/ca-certificates.crt