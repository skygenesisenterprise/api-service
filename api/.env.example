# Sky Genesis Enterprise API - Environment Variables
# ====================================================

# Server Configuration
PORT=8080
RUST_LOG=info
APP_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/api_service
DB_HOST=localhost
DB_PORT=5432
DB_NAME=api_service
DB_USER=postgres
DB_PASSWORD=password

# Vault Configuration (Secrets Management)
VAULT_ADDR=http://localhost:8200
VAULT_ROLE_ID=your-vault-role-id
VAULT_SECRET_ID=your-vault-secret-id
VAULT_TOKEN=your-vault-token

# Keycloak Configuration (Identity Management)
KEYCLOAK_URL=http://localhost:8081
KEYCLOAK_REALM=sky-genesis
KEYCLOAK_CLIENT_ID=api-service
KEYCLOAK_CLIENT_SECRET=your-keycloak-client-secret

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION_HOURS=24

# Redis Configuration (Caching)
REDIS_URL=redis://localhost:6379

# Mail Configuration (Future)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
MAIL_FROM=noreply@skygenesisenterprise.com

# External Services
STALWART_URL=http://localhost:8082
STALWART_API_KEY=your-stalwart-api-key

# PowerAdmin Configuration (DNS Management)
POWERADMIN_BASE_URL=https://poweradmin.skygenesisenterprise.com
# POWERADMIN_API_KEY=your-poweradmin-api-key  # Stored in Vault
# POWERADMIN_USERNAME=your-poweradmin-username  # Stored in Vault
# POWERADMIN_PASSWORD=your-poweradmin-password  # Stored in Vault

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Feature Flags
ENABLE_WEBSOCKET=true
ENABLE_MAIL_INTEGRATION=false
ENABLE_CERTIFICATE_AUTH=true

# Development
DEBUG=true
LOG_LEVEL=debug