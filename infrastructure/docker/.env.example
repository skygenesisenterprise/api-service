# Environment variables for Docker Compose
# Copy this file to .env and update the values

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=api_service
DB_USER=api_user
DB_PASSWORD=secure_password_change_this_in_production
DATABASE_URL=postgresql://api_user:secure_password_change_this_in_production@postgres:5432/api_service

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_this_in_production
REDIS_URL=redis://:redis_password_change_this_in_production@redis:6379

# API Configuration
NODE_ENV=production
PORT=8080
API_PORT=8080
JWT_SECRET=your_jwt_secret_minimum_32_characters_long
API_KEY_SECRET=your_api_key_secret_minimum_32_characters_long
CORS_ORIGIN=http://localhost:3000

# Frontend Configuration
WEB_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXTAUTH_SECRET=your_nextauth_secret_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000

# Optional: SSL Configuration (for production)
# SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
# SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Optional: Monitoring
# SENTRY_DSN=your_sentry_dsn_here
# LOG_LEVEL=info